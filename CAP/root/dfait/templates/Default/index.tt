[%-
  # index.tt - home page - DFAIT portal version

  USE XML.Escape;
-%]

[% META css='splash.css' %]



    


<div class="index_top">
      <p>
        [% IF iface != 'fr' %]<a href="[% c.uri_for('/', portal, 'fr', uri_tail, c.req.params) | xml_escape %]">Français</a>[% END %]
        [% IF iface != 'en' %]<a href="[% c.uri_for('/', portal, 'en', uri_tail, c.req.params) | xml_escape %]">English</a>[% END %]
      </p>
</div>
﻿

<div class="dfait_banner" style="background-image: url([% c.uri_for(root,'static','images', "dfait_header_bg.png")|xml_escape %])">
  <img id="dfait_logo" src="[% c.uri_for(root,'static','images', "dfait_splash_${iface}.png")|xml_escape%]" width="760" height="116" />
</div>



<div class="index_search_form">
                <form action="[% c.uri_for(root,'search') | xml_escape %]" method="get">
                <input dojoType="dijit.form.TextBox" type="text" name="q" value="[% c.session.search.params.q | xml_escape %]"/>

                <button dojoType="dijit.form.Button" type="submit">
                    [% c.loc("Search") | xml_escape %]
                </button>
                </form>
       
       <!-- <form action="[% c.uri_for(root,'search') | xml_escape %]" method="get">
          <input class="searchBox" name="q" type="text" value="[% c.session.search.params.q | xml_escape %]" />
          <input class="searchBtn" name="" type="image" src="[% c.uri_for(root,'static','images', "searchBtn_${iface}.gif")|xml_escape%]" />
        </form> -->
</div>

<div class="index_browse_button">
        <div dojoType="dijit.form.DropDownButton">

            <span>
                Browse by title
            </span>
        <div dojoType="dijit.TooltipDialog">
                <form action="[% c.uri_for(root,'search') | xml_escape %]" method="GET">
                <b>Sort</b> <br />
                <input dojoType="dijit.form.RadioButton" name="so" value="oldest" checked="checked" /> oldest<br />
                <input dojoType="dijit.form.RadioButton" name="so" value="newest" /> newest<br />
                <input dojoType="dijit.form.RadioButton" name="so" value="score" /> relevance<br /><br />
                <b>Type</b> <br />
                <input dojoType="dijit.form.RadioButton" name="ctype" value="" checked="checked" /> any<br />
                <input dojoType="dijit.form.RadioButton" name="ctype" value="press" /> press release<br />
                <input dojoType="dijit.form.RadioButton" name="ctype" value="statement" /> statement<br />
                <input dojoType="dijit.form.RadioButton" name="ctype" value="speech" /> speech<br />
                <input dojoType="dijit.form.RadioButton" name="ctype" value="index" /> index<br />
                <input dojoType="dijit.form.RadioButton" name="ctype" value="toc" /> table of contents<br /><br />
                <b>Language</b> <br />
                <input dojoType="dijit.form.RadioButton" name="lang" value="" checked="checked" /> any<br />
                <input dojoType="dijit.form.RadioButton" name="lang" value="en" /> English<br />
                <input dojoType="dijit.form.RadioButton" name="lang" value="fr" /> French<br /><br />

                                 
                <label for="dr">
                    <b>Years</b><br />
                </label>
                <input dojoType="dijit.form.TextBox" id="dr" name="dr"/><br /><br />

                <button dojoType="dijit.form.Button" type="submit">
                    Browse
                </button> 
                </form>
        </div>
        </div>
</div>


<div id="push"></div>

    [% INCLUDE component/footer.tt %]


    </script>
    <script type="text/javascript">
        dojo.require("dijit.form.Button");
        dojo.require("dijit.TooltipDialog");
        dojo.require("dijit.Menu");
        dojo.require("dijit.form.TextBox");
        dojo.require("dijit.form.RadioButton");
    </script>
