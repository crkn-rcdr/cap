[%
  # Map sort order parameters to English names.
%]
[% SWITCH code %]
  [% CASE 'score desc' %][% c.loc('relevance') | xhtml %]
  [% CASE 'pubmin asc' %][% c.loc('oldest') | xhtml %]
  [% CASE 'pubmax desc' %][% c.loc('newest') | xhtml %]
  [% CASE 'score' %][% c.loc('relevance') | xhtml %]
  [% CASE 'newest' %][% c.loc('newest') | xhtml %]
  [% CASE 'oldest' %][% c.loc('oldest') | xhtml %]
  [% CASE 'seq' %][% c.loc('sequence') | xhtml %]

  [% CASE %][% code | xhtml %]
[% END %]

