<a class="btn btn-danger" data-toggle="modal" href="#[% id %]">[% title %]</a>
<div class="modal fade hide" id="[% id %]">
    <div class="modal-header">
        <h3>[% title %]</h3>
    </div>
    <div class="modal-body">
        <p>[% description %]</p>
    </div>
    <div class="modal-footer">
        <a class="btn" data-dismiss="modal">[% c.loc("Cancel") %]</a>
        <a class="btn btn-danger" href="[% href %]">[% c.loc("Delete") %]</a>
    </div>
</div>
