[%-
# Generate a table header with a list of columns
# Usage: INCLUDE partial/table_header.tt columns=["Column Heading", ... ]
-%]
<thead>
    <tr>
    [% FOREACH column IN columns %]
        [% # FIXME: the c.loc() should be run in the caller! But we have to update all calls before removing this %]
        <th>[% c.loc(column) %]</th>
    [% END %]
    </tr>
</thead>
