<div class="span3">
    <label for="collectionSelect">[% c.loc("Collection") %]</label>
    <select id="collectionSelect" class="span3" name="collection">
        <option value="">[% c.loc("All") %]</option>
    [% FOREACH key IN portal.sorted_subcollection_keys(lang) -%]
        <option value="[% key %]">[% portal.subcollections.$key.label.$lang %]</option>
    [% END -%]
    </select>
</div>