root <%= cap_root %>

debug = false

default_portal co

<Component Model::DB>
    schema_class = CAP::Schema
    <connect_info>
        dsn      = dbi:mysql:cap
        user     = cap
        password = ""
    </connect_info>
</Component>

solr_url http://localhost:8983/solr/select
