#!/bin/sh
# Run this script to (re)generate the database schema. You must be in the
# main CAP directory to run this command.
if [ ! -x "script/cap_create.pl" ]; then
    echo "You must run this script from the main CAP directory."
    exit 1
fi
echo "(re)generating the database schemas..."
script/cap_create.pl model DB DBIC::Schema CAP::Schema create=static components=TimeStamp,EncodedColumn dbi:mysql:cap cap
